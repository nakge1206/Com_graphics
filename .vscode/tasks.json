{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: build active file",
            "command": "/usr/bin/g++",
            "args": [
                //"-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-I/opt/homebrew/include",
                "-L/opt/homebrew/lib",
                "-lglut",
                "-lGL"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}